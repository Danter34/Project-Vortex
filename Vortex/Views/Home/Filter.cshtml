@model List<Vortex.Models.ProductViewModel>

<div class="container main-container p-4" style="max-width: 1200px;">

    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="page-title mb-0">
            @if (!string.IsNullOrEmpty(ViewBag.CurrentSearch))
            {
                @($"Kết quả tìm kiếm: {ViewBag.CurrentSearch}")
            }
            else if (!string.IsNullOrEmpty(ViewBag.CurrentCategory))
            {
                @($"Sản phẩm: {ViewBag.CurrentCategory}")
            }
            else
            {
                @("Tất cả sản phẩm")
            }
        </h1>

        <form method="get" class="d-flex align-items-center">
            <input type="hidden" name="search" value="@ViewBag.CurrentSearch" />
            <input type="hidden" name="categoryId" value="@ViewBag.CurrentCategoryId" />
            <span class="me-2">Sắp xếp:</span>
            <select class="form-select form-select-sm" name="sortOption" onchange="this.form.submit()" style="width: auto;">
                @if ((ViewBag.CurrentSortOption as string) == "default")
                {
                    <option value="default" selected>Mặc định</option>
                }
                else
                {
                    <option value="default">Mặc định</option>
                }

                @if ((ViewBag.CurrentSortOption as string) == "priceAsc")
                {
                    <option value="priceAsc" selected>Giá: thấp → cao</option>
                }
                else
                {
                    <option value="priceAsc">Giá: thấp → cao</option>
                }

                @if ((ViewBag.CurrentSortOption as string) == "priceDesc")
                {
                    <option value="priceDesc" selected>Giá: cao → thấp</option>
                }
                else
                {
                    <option value="priceDesc">Giá: cao → thấp</option>
                }
            </select>
        </form>
    </div>


    <div class="row g-4 ">
        @if (Model != null && Model.Any())
        {
            @foreach (var product in Model)
            {
                <div class="col-lg-3 col-md-4 col-6">
                    <div class="product-card">
                        <a asp-controller="Home" asp-action="Detail" asp-route-id="@product.Id">
                            <img src="@(product.Images?.FirstOrDefault()?.FilePath ?? "https://placehold.co/300x300/2e2e48/ffffff?text=Image")"
                                 class="product-img" alt="@product.Title">
                        </a>
                        <div class="product-info">
                            <h5 class="product-name">
                                <a asp-controller="Home" asp-action="Detail" asp-route-id="@product.Id">@product.Title</a>
                            </h5>
                            <p class="product-price">@product.Price.ToString("N0")₫</p>
                            <form asp-controller="Cart" asp-action="AddToCart" method="post" class="d-inline">
                                <input type="hidden" name="id" value="@product.Id" />
                                <button type="submit" class="btn btn-add-to-cart">
                                    <i class="fas fa-cart-plus"></i> Thêm vào giỏ
                                </button>
                            </form>
                        </div>
                    </div>
                </div>
            }
        }
        else
        {
            <p class="text-center">Không tìm thấy sản phẩm nào.</p>
        }
    </div>

    <nav class="mt-4">
        <ul class="pagination justify-content-center">
            @{
                int currentPage = ViewBag.PageNumber;
                if (currentPage > 1)
                {
                    <li class="page-item">
                        <a class="page-link"
                           href="@Url.Action("Filter", new { pageNumber = currentPage - 1, search = ViewBag.CurrentSearch, categoryId = ViewBag.CurrentCategoryId, sortBy = ViewBag.CurrentSort })">«</a>
                    </li>
                }

                <li class="page-item active"><span class="page-link">@currentPage</span></li>

                <li class="page-item">
                    <a class="page-link"
                       href="@Url.Action("Filter", new { pageNumber = currentPage + 1, search = ViewBag.CurrentSearch, categoryId = ViewBag.CurrentCategoryId, sortBy = ViewBag.CurrentSort })">»</a>
                </li>
            }
        </ul>
    </nav>

</div>