@model IEnumerable<Vortex.Models.ProductViewModel>
@{
    ViewData["Title"] = "Quản lý sản phẩm";
}

<h2 class="text-white mb-4">Quản lý sản phẩm</h2>
<a asp-action="Create" class="btn btn-success mb-3">+ Thêm sản phẩm</a>

<table class="table table-dark table-striped">
    <thead>
        <tr>
            <th>ID</th>
            <th>Tên</th>
            <th>Giá</th>
            <th>Tồn kho</th>
            <th>Danh mục</th>
            <th>Ảnh</th>
            <th>Hành động</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.Title</td>
                <td>@item.Price.ToString("N0") đ</td>
                <td>@item.StockQuantity</td>
                <td>@item.CategoryName</td>
                <td>
                    @if (item.Images != null && item.Images.Any())
                    {
                        <img src="@item.Images.First().FilePath" alt="Ảnh" style="width:60px;height:60px;border-radius:5px;" />
                    }
                    else
                    {
                        <span class="text-muted">Không có ảnh</span>
                    }
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning btn-sm me-1">Sửa</a>
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm">Xóa</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<div class="d-flex justify-content-center mt-3">
    @if (ViewBag.PageNumber > 1)
    {
        <a class="btn btn-outline-info me-2" asp-action="Index" asp-route-pageNumber="@(ViewBag.PageNumber - 1)">Previous</a>
    }
    <span class="text-white me-2">Trang @ViewBag.PageNumber</span>
    <a class="btn btn-outline-info" asp-action="Index" asp-route-pageNumber="@(ViewBag.PageNumber + 1)">Next</a>
</div>
