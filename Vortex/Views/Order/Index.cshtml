@model IEnumerable<Vortex.Models.MyOrderViewModel>

<h3>Quản lý đơn hàng</h3>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Order ID</th>
            <th>Ngày tạo</th>
            <th>Trạng thái</th>
            <th>Tổng tiền</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var order in Model)
        {
            <tr>
                <td>@order.OrderId</td>
                <td>@order.CreatedAt.ToString("dd/MM/yyyy HH:mm")</td>
                <td>@order.Status</td>
                <td>@order.TotalAmount.ToString("N0")đ</td>
                <td>
                    <a asp-action="Details" asp-route-id="@order.OrderId" class="btn btn-sm btn-primary">Chi tiết</a>
                </td>
            </tr>
        }
    </tbody>
</table>
