@model Vortex.Models.MyOrderViewModel
@{
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
<h3>Chi tiết đơn hàng #@Model.OrderId</h3>

<p>Ngày tạo: @Model.CreatedAt.ToString("dd/MM/yyyy HH:mm")</p>
<p>Trạng thái: <strong>@Model.Status</strong></p>
<p>Khách hàng: <strong>@Model.Name</strong></p>
<p>Địa chỉ: <strong>@Model.ShippingAddress</strong></p>
<p>Số điện thoại: <strong>@Model.Phone</strong></p>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Sản phẩm</th>
            <th>Giá</th>
            <th>Số lượng</th>
            <th>Tạm tính</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Items)
        {
            <tr>
                <td>
                    <img src="https://localhost:7161/@item.ProductImage" height="50" />
                    @item.ProductTitle
                </td>
                <td>@item.Price.ToString("N0")đ</td>
                <td>@item.Quantity</td>
                <td>@item.Subtotal.ToString("N0")đ</td>
            </tr>
        }
    </tbody>
</table>

<p>Tổng tiền: <strong>@Model.TotalAmount.ToString("N0")đ</strong></p>

<form asp-action="UpdateStatus" method="post" class="d-flex align-items-center gap-3 mt-4">
    <input type="hidden" name="orderId" value="@Model.OrderId" />

    <select name="newStatus" class="form-select custom-select w-auto">
        <option value="Pending" selected="@(Model.Status == "Pending")">Pending</option>
        <option value="Confirmed" selected="@(Model.Status == "Confirmed")">Confirmed</option>
        <option value="Shipped" selected="@(Model.Status == "Shipped")">Shipped</option>
        <option value="Delivered" selected="@(Model.Status == "Delivered")">Delivered</option>
        <option value="Canceled" selected="@(Model.Status == "Canceled")">Canceled</option>
    </select>

    <button type="submit" class="btn btn-primary fw-bold px-4">Cập nhật trạng thái</button>
</form>

<style>
    body {
        background-color: #12121f;
    }

    h3 {
        font-weight: 600;
        color: #00b4ff;
    }

    .custom-select {
        background-color: #1e1e2f;
        color: #fff;
        border: 1px solid #444;
        border-radius: 8px;
        padding: 6px 12px;
        transition: all 0.2s ease-in-out;
    }

    .custom-select:hover {
        border-color: #00b4ff;
        box-shadow: 0 0 5px #00b4ff;
    }

    .custom-select:focus {
        outline: none;
        box-shadow: 0 0 8px #00b4ff;
    }

    .btn-primary {
        background-color: #007bff;
        border: none;
        border-radius: 8px;
        transition: 0.2s ease-in-out;
    }

    .btn-primary:hover {
        background-color: #0069d9;
        box-shadow: 0 0 8px rgba(0, 123, 255, 0.6);
    }

    .table {
        background-color: #1e1e2f;
        color: #ddd;
        border-radius: 10px;
        overflow: hidden;
    }

    .table-hover tbody tr:hover {
        filter: brightness(1.2);
    }
</style>
