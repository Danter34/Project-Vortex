@model RegisterViewModel

@{
    Layout = null;
    ViewData["Title"] = "Đăng Ký";
}

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Đăng Ký - Vortex Play</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.2/css/all.min.css">
    <link href="https://fonts.googleapis.com/css2?family=Orbitron:wght@400;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="~/css/styles.css">
</head>
<body class="auth-body">
    <video autoplay muted loop playsinline id="auth-video-bg">
        <source src="/asset/video/1006.mp4" type="video/mp4">
        Trình duyệt của bạn không hỗ trợ video.
    </video>

    <div class="auth-container">
        <div class="auth-card">
            <h2 class="auth-title">ĐĂNG KÝ</h2>
            <p class="auth-subtitle">Gia nhập vũ trụ Vortex Play!</p>

            <form method="post">
                <div asp-validation-summary="ModelOnly" class="alert alert-danger mb-3"></div>

                <div class="form-floating mb-3">
                    <input asp-for="FullName" class="form-control" id="registerName" placeholder="Tên hiển thị">
                    <label asp-for="FullName">Tên hiển thị</label>
                    <span asp-validation-for="FullName" class="text-danger"></span>
                </div>

                <div class="form-floating mb-3">
                    <input asp-for="Email" class="form-control" id="registerEmail" placeholder="name@example.com">
                    <label asp-for="Email">Email</label>
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>

                <div class="input-group mb-3">
                    <div class="form-floating flex-grow-1">
                        <input asp-for="Password" class="form-control" id="registerPassword" placeholder="Mật khẩu" type="password">
                        <label asp-for="Password">Mật khẩu</label>
                    </div>
                    <button class="btn btn-outline-secondary toggle-password-btn" type="button" data-target="#registerPassword">
                        <i class="fas fa-eye"></i>
                    </button>
                </div>
                <span asp-validation-for="Password" class="text-danger d-block mb-2"></span>

                <div class="input-group mb-3">
                    <div class="form-floating flex-grow-1">
                        <input asp-for="ConfirmPassword" class="form-control" id="confirmPassword" placeholder="Xác nhận mật khẩu" type="password">
                        <label asp-for="ConfirmPassword">Xác nhận mật khẩu</label>
                    </div>
                    <button class="btn btn-outline-secondary toggle-password-btn" type="button" data-target="#confirmPassword">
                        <i class="fas fa-eye"></i>
                    </button>
                </div>
                <span asp-validation-for="ConfirmPassword" class="text-danger d-block mb-2"></span>

                <div class="form-check mb-3">
                    <input class="form-check-input" type="checkbox" value="" id="agreeTerms" required>
                    <label class="form-check-label" for="agreeTerms">
                        Tôi đồng ý với <a href="#" class="auth-link">điều khoản dịch vụ</a>
                    </label>
                </div>

                <button type="submit" class="btn btn-auth w-100">ĐĂNG KÝ</button>
            </form>

            <p class="mt-4 text-center">Đã có tài khoản? <a asp-controller="Auth" asp-action="Login" class="auth-link">Đăng nhập</a></p>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            // Chức năng hiển thị/ẩn mật khẩu (Dùng cho nhiều nút)
            const togglePasswordButtons = document.querySelectorAll('.toggle-password-btn');

            togglePasswordButtons.forEach(button => {
                button.addEventListener('click', function () {
                    const targetInputId = this.getAttribute('data-target');
                    const passwordInput = document.querySelector(targetInputId);

                    if (passwordInput) {
                        // Thay đổi type của input
                        const type = passwordInput.getAttribute('type') === 'password' ? 'text' : 'password';
                        passwordInput.setAttribute('type', type);

                        // Thay đổi icon (toggle một lần cho hiệu quả)
                        const icon = this.querySelector('i');
                        icon.classList.toggle('fa-eye');
                        icon.classList.toggle('fa-eye-slash');
                    }
                });
            });
        });
    </script>
</body>
</html>