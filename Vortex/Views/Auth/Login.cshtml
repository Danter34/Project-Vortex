@model LoginViewModel

@{
    Layout = null;
    ViewData["Title"] = "Đăng nhập";
}

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"] - Vortex Play</title>
    <!-- Dependencies -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.2/css/all.min.css">
    <link href="https://fonts.googleapis.com/css2?family=Orbitron:wght@400;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="~/css/styles.css">
</head>
<body class="auth-body">
    <video autoplay muted loop playsinline id="auth-video-bg">
        <source src="~/1006.mp4" type="video/mp4">
        Trình duyệt của bạn không hỗ trợ video.
    </video>

    <div class="auth-container">
        <div class="auth-card">
            <h2 class="auth-title">ĐĂNG NHẬP</h2>
            <p class="auth-subtitle">Chào mừng trở lại, Gamer!</p>

            <form method="post">
                <div class="form-floating mb-3">
                    <input asp-for="Email" class="form-control" id="loginEmail" placeholder="name@example.com">
                    <label asp-for="Email"></label>
                </div>

                <div class="input-group mb-3">
                    <div class="form-floating">
                        <input asp-for="Password" type="password" class="form-control" id="loginPassword" placeholder="Mật khẩu">
                        <label asp-for="Password"></label>
                    </div>
                    <button class="btn btn-outline-secondary toggle-password-btn" type="button" data-target="#loginPassword">
                        <i class="fas fa-eye"></i>
                    </button>
                </div>

                <div class="d-flex justify-content-between align-items-center mb-3">
                    <div class="form-check">
                        <input asp-for="RememberMe" class="form-check-input" id="rememberMe">
                        <label class="form-check-label" asp-for="RememberMe">
                            Ghi nhớ tôi
                        </label>
                    </div>
                    <a href="#" class="auth-link">Quên mật khẩu?</a>
                </div>

                @if (!ViewData.ModelState.IsValid || ViewBag.LoginError != null)
                {
                    <div class="alert alert-danger" role="alert">
                        @if (ViewBag.LoginError != null)
                        {
                            <span>@ViewBag.LoginError</span>
                        }
                        else
                        {
                            <span>Sai email hoặc mật khẩu!</span>
                        }
                    </div>
                }

                <button type="submit" class="btn btn-auth w-100">ĐĂNG NHẬP</button>
            </form>

            <p class="mt-4 text-center">Chưa có tài khoản? <a asp-controller="Auth" asp-action="Register" class="auth-link">Đăng ký ngay</a></p>
        </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            // Chức năng hiển thị/ẩn mật khẩu (Dùng cho nhiều nút)
            const togglePasswordButtons = document.querySelectorAll('.toggle-password-btn');

            togglePasswordButtons.forEach(button => {
                button.addEventListener('click', function () {
                    const targetInputId = this.getAttribute('data-target');
                    const passwordInput = document.querySelector(targetInputId);

                    if (passwordInput) {
                        // Thay đổi type của input
                        const type = passwordInput.getAttribute('type') === 'password' ? 'text' : 'password';
                        passwordInput.setAttribute('type', type);

                        // Thay đổi icon (toggle một lần cho hiệu quả)
                        const icon = this.querySelector('i');
                        icon.classList.toggle('fa-eye');
                        icon.classList.toggle('fa-eye-slash');
                    }
                });
            });
        });
    </script>
</body>
</html>