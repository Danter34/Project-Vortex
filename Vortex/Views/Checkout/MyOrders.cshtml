@model List<Vortex.Models.MyOrderViewModel>

<style>
    .my-orders-container {
        background-color: #0a0a0a;
        color: #ffffff;
        padding: 20px;
        min-height: 100vh;
    }

    .orders-header {
        color: #00ffff;
        text-shadow: 0 0 10px #00ffff;
        font-weight: bold;
        margin-bottom: 30px;
        text-align: center;
    }

    .order-card {
        background: linear-gradient(145deg, #1a1a1a, #0f0f0f);
        border: 1px solid #333;
        border-radius: 12px;
        margin-bottom: 20px;
        overflow: hidden;
        box-shadow: 0 4px 15px rgba(0, 255, 255, 0.1);
    }

    .order-header {
        background: #111;
        padding: 15px 20px;
        border-bottom: 1px solid #333;
        display: flex;
        justify-content: space-between;
        align-items: center;
        color: #ffffff;
    }

    .order-status {
        padding: 5px 12px;
        border-radius: 20px;
        font-size: 0.85em;
        font-weight: bold;
    }

    .status-pending {
        background: rgba(255, 255, 0, 0.2); /* vàng nhạt */
        color: #FFD700; /* vàng */
        border: 1px solid #FFD700;
    }

    .status-shipping {
        background: rgba(255, 165, 0, 0.2); /* cam nhạt */
        color: #FFA500; /* cam */
        border: 1px solid #FFA500;
    }

    .status-shipped {
        background: rgba(50, 205, 50, 0.2); /* xanh lá nhạt */
        color: #32CD32; /* xanh lá */
        border: 1px solid #32CD32;
    }

    .status-cancelled {
        background: rgba(220, 53, 69, 0.2); /* đỏ nhạt */
        color: #DC3545; /* đỏ */
        border: 1px solid #DC3545;
    }


    .order-body {
        padding: 20px;
    }

    .order-item {
        display: flex;
        align-items: center;
        margin-bottom: 15px;
        padding: 10px;
        background: rgba(255, 255, 255, 0.05);
        border-radius: 8px;
        border: 1px solid rgba(0, 255, 255, 0.1);
    }

        .order-item img {
            width: 80px;
            height: 80px;
            border-radius: 8px;
            margin-right: 15px;
            border: 1px solid #333;
        }

    .order-item-details {
        flex: 1;
    }

    .order-item-title {
        margin: 0 0 5px 0;
        color: #ffffff;
        font-weight: 500;
    }

    .order-item-meta {
        color: #888;
        font-size: 0.9em;
    }

    .order-item-total {
        color: #ff1493;
        font-weight: bold;
        font-size: 1.1em;
        min-width: 100px;
        text-align: right;
    }

    .order-total-row {
        padding: 15px 0;
        border-top: 1px solid #333;
        display: flex;
        justify-content: space-between;
        align-items: center;
        font-size: 1.2em;
        font-weight: bold;
        color: #ffffff;
    }

    .order-total-amount {
        color: #ff1493;
        text-shadow: 0 0 5px #ff1493;
    }

    .cancel-form {
        margin-top: 15px;
        text-align: right;
    }

    .btn-cancel {
        background: linear-gradient(145deg, #ff1493, #ff69b4);
        border: none;
        color: #ffffff;
        padding: 10px 20px;
        border-radius: 25px;
        font-weight: bold;
        box-shadow: 0 4px 10px rgba(255, 20, 147, 0.3);
        transition: all 0.3s;
    }

        .btn-cancel:hover {
            transform: translateY(-2px);
            box-shadow: 0 6px 15px rgba(255, 20, 147, 0.4);
        }

    .alert {
        border-radius: 8px;
        margin-bottom: 20px;
    }

    .alert-danger {
        background: rgba(220, 53, 69, 0.1);
        border: 1px solid #dc3545;
        color: #dc3545;
    }

    .alert-success {
        background: rgba(40, 167, 69, 0.1);
        border: 1px solid #28a745;
        color: #28a745;
    }
</style>

<div class="container main-container p-4" style="max-width: 1200px;>
    <h2 class="orders-header">Đơn hàng của tôi</h2>

    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger">@TempData["Error"]</div>
    }
    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success">@TempData["Success"]</div>
    }

    @foreach (var order in Model)
    {
        <div class="order-card">
            <div class="order-header">
                <strong style="color: #00ffff;">Mã đơn hàng:</strong> @order.OrderId
                <span class="order-status @(order.Status == "Pending" ? "status-pending" :
                               order.Status == "Shipping" ? "status-shipping" :
                               order.Status == "shipped" ? "status-shipped" :
                               order.Status == "Cancelled" ? "status-cancelled" : "")">
                    @order.Status
                </span>
            </div>
            <div class="order-body">
                @foreach (var item in order.Items)
                {
                    <div class="order-item">
                        <img src="https://localhost:7161/@item.ProductImage" alt="@item.ProductTitle" />
                        <div class="order-item-details">
                            <p class="order-item-title">@item.ProductTitle</p>
                            <small class="order-item-meta">SL: @item.Quantity x @item.Price.ToString("N0")₫</small>
                        </div>
                        <span class="order-item-total">@item.Subtotal.ToString("N0")₫</span>
                    </div>
                }
                <div class="order-total-row">
                    <strong>Tổng cộng:</strong>
                    <strong class="order-total-amount">@order.TotalAmount.ToString("N0")₫</strong>
                </div>
                @if (order.Status == "Pending")
                {
                    <form asp-action="CancelOrder" method="post" class="cancel-form">
                        <input type="hidden" name="orderId" value="@order.OrderId" />
                        <button type="submit" class="btn btn-cancel">Hủy đơn</button>
                    </form>
                }
            </div>
        </div>
    }
    <div class="pagination-container text-center mt-4">
        @if (ViewBag.PageNumber > 1)
        {
            <a class="btn btn-outline-info me-2" asp-action="MyOrders" asp-route-pageNumber="@(ViewBag.PageNumber - 1)">Previous</a>
        }
        <span class="me-2">Trang @ViewBag.PageNumber</span>
        <a class="btn btn-outline-info" asp-action="MyOrders" asp-route-pageNumber="@(ViewBag.PageNumber + 1)">Next</a>
    </div>
</div>