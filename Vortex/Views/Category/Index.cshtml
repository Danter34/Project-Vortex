@model List<Vortex.Models.CategoryViewModel>
@{
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
<h3>Danh mục sản phẩm</h3>
<a asp-action="Create" class="btn btn-primary mb-3">Thêm danh mục mới</a>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>ID</th>
            <th>Tên</th>
            <th>Parent ID</th>
            <th>Hành động</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var cat in Model)
        {
            <tr>
                <td>@cat.Id</td>
                <td>@cat.Name</td>
                <td>@cat.ParentId</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@cat.Id" class="btn btn-primary btn-sm">Sửa</a>
                    <form asp-action="Delete" asp-route-id="@cat.Id" method="post" style="display:inline">
                        <button type="submit" class="btn btn-danger btn-sm">Xóa</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
