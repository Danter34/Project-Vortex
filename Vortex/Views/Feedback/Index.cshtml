@model Vortex.Models.FeedbackResponseViewModel

<h3>Gửi phản hồi / Liên hệ</h3>

@if (TempData["Error"] != null)
{
    <div class="alert alert-danger">@TempData["Error"]</div>
}
@if (TempData["Success"] != null)
{
    <div class="alert alert-success">@TempData["Success"]</div>
}

@if (Model == null || Model.Status != "Replied")
{
    <form method="post" asp-action="SendFeedback">
        <div class="mb-3">
            <label>Nội dung phản hồi:</label>
            <textarea name="message" class="form-control" rows="4"></textarea>
        </div>
        <button type="submit" class="btn btn-primary">Gửi phản hồi</button>
    </form>
}
else
{
    <div class="alert alert-info">
        Bạn đã gửi phản hồi và admin đã trả lời. Không thể gửi thêm phản hồi mới.
    </div>
}

@if (Model != null)
{
    <hr />
    <h5>Phản hồi gần nhất:</h5>
    <p><b>Nội dung:</b> @Model.Message</p>
    <p><b>Trạng thái:</b> @Model.Status</p>
    @if (!string.IsNullOrEmpty(Model.AdminReply))
    {
        <p><b>Trả lời từ Admin:</b> @Model.AdminReply</p>
    }
}
